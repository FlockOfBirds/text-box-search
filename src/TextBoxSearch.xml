<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.textboxsearch.TextBoxSearch" offlineCapable="false" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Text-box search</name>
    <description>Search Mendix list views using a search input</description>
    <icon></icon>
    <properties>
        <property key="entity" type="entity">
            <caption>List view with entity</caption>
            <category>General</category>
            <description>Entity whose attributes will be searched. This entity should match the list view entity</description>
        </property>
        <property key="placeHolder" type="translatableString" required="false">
            <caption>Placeholder</caption>
            <category>General</category>
            <description>Specifies a short hint that describes the expected value of the search input field</description>
            <translations>
                <translation lang="en_US">Search</translation>
                <translation lang="nl_NL">Zoeken</translation>
            </translations>
        </property>
        <property key="defaultQuery" type="translatableString" required="false">
            <caption>Default query</caption>
            <category>General</category>
            <description>The default query that is used to filter the list</description>
        </property>
        <property key="attributetList" type="object" isList="true">
            <caption>Attributes</caption>
            <category>General</category>
            <description/>
            <properties>
                <property key="attribute" type="attribute" isPath="optional" pathType="reference" entityProperty="../entity">
                    <caption>Attribute</caption>
                    <category>General</category>
                    <description>The attribute of the list view entity</description>
                    <attributeTypes>
                        <attributeType name="String"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Decimal"/>
                        <attributeType name="Boolean"/>
                        <attributeType name="DateTime"/>
                        <attributeType name="Enum"/>
                        <attributeType name="Long"/>
                    </attributeTypes>
                </property>
            </properties>
        </property>
    </properties>
</widget>
